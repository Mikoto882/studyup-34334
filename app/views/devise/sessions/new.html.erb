<%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>

<div class='form-wrap'>
  <div class='form-all'>
    <p class='form-header-text'>
      ログイン情報入力
    </p>

    <div class="form">
      <div class="form-group">
        <div class="form-text-wrap">
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"study.up@email", autofocus: true %>
      </div>

      <div class="form-group">
        <div class="form-text-wrap">
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"英数字含む6~12文字" %>
      </div>

      <div class="login-btn">
        <%= f.submit "ログイン", class:"login-red-btn" %>
      </div>
    </div>

  </div>
</div>
<% end %>